<style>
  .shopify-test-grid-wrapper {
    display: grid;
    grid-template-columns: 1fr 1fr;
  }

  .shopify-test-grid-wrapper img {
    max-width: 100%;
    height: auto;
  }

  .shopify-test-grid-wrapper .second-col {
    background-image: url("{{ section.settings.imgBgSecondCol | img_url: 'master' }}");
    background-size: cover;
    background-position: center center;
  }

  .shopify-test-grid-wrapper .second-col h2 {
    font-family: 'Inter';
    font-size: 22px;
    margin: 0 0 1.5rem;
  }

  .shopify-test-grid-wrapper .second-col p {
    font-family: 'Inter';
    font-size: 16px;
    margin: 0 0 2rem;
  }

  .btn-book-test {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 64px;
    width: 300px;
    text-decoration: none;
  }

  .btn-book-test h6 {
    font-family: 'Inter';
    font-size: 16px;
    font-weight: semibold;
    margin: 0;
  }
</style>

<div class="shopify-test-grid-wrapper">
  <img src="{{ section.settings.imageFirstColTest | img_url: 'master' }}" />
  <div class="second-col">
    <h2>{{ section.settings.headTitle }}</h2>
    <p>{{ section.settings.description }}</p>
    <a href="{{ section.settings.urlTest }}" class="btn-book-test">
      <h6>{{ section.settings.btnLabel }}</h6>
    </a>
  </div>
</div>

{% schema %}
  {
    "name": "Shopify Test",
    "settings": [
      {
        "type": "header",
        "content": "First Column Image"
      },
      {
        "type": "image_picker",
        "id": "imageFirstColTest",
        "label": "Image first column"
      },
      {
        "type": "header",
        "content": "Second Column"
      },
      {
        "type": "image_picker",
        "id": "imgBgSecondCol",
        "label": "Background Image of second column"
      },
      {
        "type": "text",
        "id": "headTitle",
        "label": "Title",
        "default": "Heading Title"
      },
      {
        "type": "richtext",
        "id": "description",
        "label": "Your description",
        "default": "<p>Your description</p>"
      },
      {
        "type": "url",
        "id": "urltest",
        "label": "Your URL"
      },
      {
        "type": "text",
        "id": "btnLabel",
        "label": "Button label",
        "default": "BOOK A TEST RIDE"
      }
    ],
    "presets": [
      {
        "name": "Shopify Test"
      }
    ]
  }
{% endschema %}

